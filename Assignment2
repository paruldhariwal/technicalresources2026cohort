#1
n=int(input("Enter a number:"))
for row in range(1,n+1):
  
  
  print("*"*row)
  
#2

n=int(input("Enter a number:"))
for row in range(1,n+1):
  print("* "*(n))
  n=n-1
  
  
#3.
n=int(input("Enter a number:"))
for row in range(1,n+1):
  
  print(" "*(n-1) + "*"*row)
  n=n-1 
 
#4.
n=int(input("Enter a number:"))
c=0
for row in range(1,n+1):
    
    print(" "*c + "*"*n)
    c=c+1
    n=n-1
 
  
  
    
